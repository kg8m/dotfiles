snippet params_for_strong_parameters
alias   params
abbr    params.require(:{model_name}).permit({attributes})
options head
	params.require(:${1:#:model_name}).permit(:${2:#:attribute})

snippet respond_to_format
abbr    respond_to do |format|\n format.{format} { ... }\n end
options head
	respond_to do |format|
		format.${1:js} { ${0} }
	end

snippet format
abbr    format.{format} { ... }
options head
	format.${1:json} { ${0} }

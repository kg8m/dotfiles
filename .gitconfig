[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = white red
local = yellow
remote = green

[color "diff"]
meta = green
frag = magenta bold
old  = cyan
new  = red

[color "status"]
added = yellow
changed = green
untracked = cyan

[color]
ui = true

[core]
whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
editor = vim
excludesfile = ~/.gitignore

[branch]
autosetupmerge = true

[alias]
aa    = !git add . && git add -u && git status
alias = !git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort -k3
find  = !git ls-files | grep -i
ad = add
br = branch
co = checkout
ch = checkout HEAD
cm = commit --ammend
ci = commit -v
ca = commit -va
di = diff --ignore-all-space --ignore-blank-lines --ignore-space-at-eol --ignore-space-change
dc = diff --ignore-all-space --ignore-blank-lines --ignore-space-at-eol --ignore-space-change --cached
dw = diff --ignore-all-space --ignore-blank-lines --ignore-space-at-eol --ignore-space-change --color-words
dh = diff --ignore-all-space --ignore-blank-lines --ignore-space-at-eol --ignore-space-change HEAD
da = diff HEAD
fc = fetch
lg = log --graph --pretty=format:\"%Cgreen%h %ci %Cblue%cn %Creset%s\"
lo = log --stat
lp = log -p --stat
pl = pull --stat
pr = pull --stat --rebase
re = reset --soft HEAD^
rv = revert
rm = rm --cached -f
st = status
su = submodule update -i

[github]
user = kg8m

[push]
default = simple

[include]
path = ~/.gitconfig.local

[diff]
algorithm = histogram
context = 10
renames = copies

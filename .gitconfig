[user]
name = kg8m
email = info@kagitaku.com

; https://github.com/sasata299/dotfiles/blob/master/.gitconfig
[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = white red
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold
old = cyan bold
new = magenta bold

[color "status"]
added = yellow
changed = green
untracked = cyan

[color]
ui = true

[core]
whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
editor = vim

[branch]
autosetupmerge = true

[alias]
ci  = commit -av
di  = diff -b
dia = diff
dh  = diff HEAD
dc  = diff --cached
lo  = log --stat
lp  = log -p --stat
lg  = log --graph --pretty=format:\"%Cgreen%h %cd %Cblue%cn %Creset%s\"
re  = reset --soft HEAD^
co  = checkout
ch  = checkout HEAD
rv  = revert
ad  = add
st  = status
br  = branch
su  = submodule update -i
rm  = rm --cached -f
[github]
	user = kg8m
[push]
	default = simple

#!/usr/bin/env zsh
source ~/.config/zsh/utility-functions.zsh

message=""
host=""
notifier_options=()
is_stay="1"

while [ "${#@}" -gt 0 ]; do
  case "$1" in
    --title)
      notifier_options+=("-title \"${2:?}\"")
      shift 2
      ;;
    --host)
      host="${${2:?}}"
      shift 2
      ;;
    --nostay)
      is_stay="0"
      shift 1
      ;;
    *)
      if [ -n "${message}" ]; then
        echo:error "Only 1 argument can be given except for options: ${message} vs. $1"
        return 1
      else
        message="$1"
        shift 1
      fi
      ;;
  esac
done

if [ -z "${message}" ]; then
  message="Command finished."
fi

if [ -z "${host}" ]; then
  host="$(hostname)"
fi

message="[${host}] ${message}"
notifier_options+=("-group \"NOTIFY_${message}\"")

if [ "${is_stay}" = "1" ]; then
  notifier_options+=("-sender TERMINAL_NOTIFIER_STAY")
fi

# `> /dev/null` for ignoring "Removing previously sent notification" message
ssh main -t "echo '${message}' | terminal-notifier ${notifier_options[*]}" > /dev/null

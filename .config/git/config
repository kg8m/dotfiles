[mergetool]
keepBackup = false

[pager]
log  = diff-highlight | less --LINE-NUMBERS
show = diff-highlight | less --LINE-NUMBERS
diff = diff-highlight | less --LINE-NUMBERS

[pull]
rebase = true

[rebase]
autostash = true

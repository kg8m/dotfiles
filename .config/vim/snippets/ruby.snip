# YARD  {{{
# https://rubydoc.info/gems/yard/file/docs/Tags.md

snippet abstract
abbr    @abstract ...
options word
regexp  '^\s*#\s*@a\%[bstract]*'
	abstract ${1:#:description}

snippet api
abbr    @api ...
options word
regexp  '^\s*#\s*@a\%[pi]*'
	api ${1:private}

snippet deprecated
abbr    @deprecated ...
options word
regexp  '^\s*#\s*@d\%[eprecated]*'
	deprecated Use ${1:#:description} instead.

snippet example
abbr    @example ...
options word
regexp  '^\s*#\s*@e\%[xample]*'
	example
	#   ${1:#:sample_code}

snippet example_with_title
abbr    @example Title ...
options word
regexp  '^\s*#\s*@e\%[xample]*'

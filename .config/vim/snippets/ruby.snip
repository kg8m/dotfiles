snippet optparse
alias   require_optparse
abbr    require "optparse" ... opts.banner ...
options word
	require "optparse"

	options = { ${0:default: "args"} }

	ARGV.options do |opts|
		opts.banner = "Usage: #{File.basename($PROGRAM_NAME)}"
	end

snippet opts_on
